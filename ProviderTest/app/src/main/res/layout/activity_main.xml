<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/add_book_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Data To Book" />

    <Button
        android:id="@+id/query_book_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Query Data From Book" />

    <Button
        android:id="@+id/update_book_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Data To Book" />

    <Button
        android:id="@+id/delete_book_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Data From Book" />

</LinearLayout>